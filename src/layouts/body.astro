---
import Sidebar from "./sidebar.astro"
import Main from "./main.astro"
import Nav from "./nav.astro"
---


<body class="flex flex-col min-h-screen">
    <!-- Navigation Bar -->
    <nav class="bg-blue-500 text-white w-full">
        <Nav />
    </nav>

    <!-- Main Content Area with Sidebar and Main content -->
    <div class="flex flex-1 min-h-0"> <!-- flex-1 y min-h-0 son importantes para que el contenido se ajuste adecuadamente -->
        <!-- Sidebar -->
        <div class="w-64 bg-gray-800 text-white overflow-auto">
            <Sidebar />
        </div>

        <!-- Main Content -->
        <div class="flex-1 bg-gray-100 overflow-auto p-4">
            <Main />
        </div>
    </div>
</body>
